<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabajoPractico3.Principal"
             Title="Principal"
            BackgroundColor="#221f1f">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Image 
            Source="netflix_logo.png"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            HeightRequest="100"
            WidthRequest="300"
            Margin="0,32,0,0"/>

        <Entry
            x:Name="NombreUsuario"
            Placeholder="Usuario"
            TextColor="#f5f5f1"
            PlaceholderColor="#f5f5f1"
            Margin="0,32,0,0"/>
        

        <Entry
            x:Name="ContraseñaUsuario"
            Placeholder="Contraseña"
            TextColor="#f5f5f1"
            PlaceholderColor="#f5f5f1"
            IsPassword="True"/>

        <Button
            x:Name="BtnIngresar"
            Text="INICIAR SESION"
            TextColor="#f5f5f1"
            BackgroundColor="#E50914"
            CornerRadius="5"
            HeightRequest="60"
            Margin="32,8,32,0"
            Clicked="Button_Clicked"/>

    </VerticalStackLayout>
    
</ContentPage>